<?xml version="1.0"?>

<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="-0.7"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find autlab3)/worlds/turtlebot3_world3.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>

  
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_coke1" args="-database coke_can -sdf -model coke_can1 -y 1.0 -x 1.0" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_coke2" args="-database coke_can -sdf -model coke_can2 -y -2.0 -x 1.0" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_coke3" args="-database coke_can -sdf -model coke_can3 -y 0.0 -x 2.0" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_coke4" args="-database coke_can -sdf -model coke_can4 -y 2.0 -x 0.0" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_coke5" args="-database coke_can -sdf -model coke_can5 -y 1.0 -x -2.0" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_coke6" args="-database coke_can -sdf -model coke_can6 -y -2.0 -x -1.0" />

</launch>
